<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_recycler_parent"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/menu_item_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/papua_new"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/menu_recycler_parent"
        app:layout_constraintStart_toStartOf="@id/menu_recycler_parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu_recycler_parent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="200dp"
        android:paddingEnd="50dp"
        app:layout_constraintStart_toStartOf="@id/menu_item_photo"
        app:layout_constraintEnd_toEndOf="@id/menu_recycler_parent"
        app:layout_constraintTop_toTopOf="@id/menu_recycler_parent"
        app:layout_constraintBottom_toBottomOf="@id/menu_recycler_parent">

        <TextView
            android:id="@+id/menu_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Secret Stash 041: Lourdes S. Intrinsic Cherry"
            app:layout_constraintStart_toStartOf="@id/menu_recycler_parent2"
            app:layout_constraintEnd_toEndOf="@id/menu_recycler_parent2"
            app:layout_constraintTop_toTopOf="@id/menu_recycler_parent2" />

        <TextView
            android:id="@+id/menu_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="P700-P1700"
            app:layout_constraintStart_toStartOf="@id/menu_recycler_parent2"
            app:layout_constraintEnd_toEndOf="@id/menu_recycler_parent2"
            app:layout_constraintTop_toBottomOf="@id/menu_item_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>