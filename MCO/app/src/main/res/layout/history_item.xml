<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/border"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp">

    <TextView
        android:id="@+id/order_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/sora_extralight"
        android:gravity="center"
        android:text="yardstick golden ticket"
        android:textAlignment="viewStart"
        android:textColor="@color/black40"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/menu_item_title"
        app:layout_constraintTop_toBottomOf="@+id/menu_item_title" />

    <TextView
        android:id="@+id/order_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/sora_extralight"
        android:gravity="center"
        android:text="address"
        android:textAlignment="viewStart"
        android:textColor="@color/black40"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/menu_item_title"
        app:layout_constraintTop_toBottomOf="@+id/menu_item_title" />

    <TextView
        android:id="@+id/order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/sora_extralight"
        android:gravity="center"
        android:text="date"
        android:textAlignment="viewStart"
        android:textColor="@color/black40"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/menu_item_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/menu_item_title"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sora"
        android:gravity="center"
        android:text="Order ID:"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/history_item_photo"
        app:layout_constraintTop_toTopOf="@+id/history_item_photo" />

    <TextView
        android:id="@+id/order_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sora_semibold"
        android:gravity="center"
        android:text="P700"
        android:textAlignment="viewStart"
        android:textColor="@color/orange"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/history_item_photo"
        app:layout_constraintStart_toStartOf="@+id/menu_item_title"
        app:layout_constraintTop_toBottomOf="@+id/order_address" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/order_again"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Order Again"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:backgroundTint="#ec694a"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_total"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="#e7dfd9"
        app:strokeWidth="2dp" />

    <ImageView
        android:id="@+id/history_item_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/papua_new"
        app:layout_constraintStart_toStartOf="@id/menu_title"
        app:layout_constraintTop_toTopOf="@id/menu_title" />


</androidx.constraintlayout.widget.ConstraintLayout>